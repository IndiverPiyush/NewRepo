@model MedicineSearchWebApp.Models.Vendor

@{
    ViewData["Title"] = "EditVendor";
    Layout = "~/Views/Home/_AfterLoginLayout.cshtml";
}

<br />
<h4 align ="center">Update Details</h4>
<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="EditVendor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendorId" />
            <div class="form-group">
                <label asp-for="VendorOrgName" class="control-label"></label>
                <input asp-for="VendorOrgName" class="form-control" />
                <span asp-validation-for="VendorOrgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorArea" class="control-label"></label>
                <input asp-for="VendorArea" class="form-control" />
                <span asp-validation-for="VendorArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorCity" class="control-label"></label>
                <input asp-for="VendorCity" class="form-control" />
                <span asp-validation-for="VendorCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorMobile" class="control-label"></label>
                <input asp-for="VendorMobile" class="form-control" />
                <span asp-validation-for="VendorMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorWallet" class="control-label"></label>
                <input asp-for="VendorWallet" class="form-control" />
                <span asp-validation-for="VendorWallet" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="VendorPassword" class="control-label"></label>
                    <input asp-for="VendorPassword" class="form-control" />
                    <span asp-validation-for="VendorPassword" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="VendorSpeciality" class="control-label"></label>
                <input asp-for="VendorSpeciality" class="form-control" />
                <span asp-validation-for="VendorSpeciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


    @*<div>
            <a asp-action="Index">Back to List</a>
        </div>*@

