@model MedicineSearchWebApp.Models.Medecine

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Home/_AfterLoginLayout.cshtml";
}


<h4>Update Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicineId" />
            <div class="form-group">
                <label asp-for="MedicineDosage" class="control-label">Dosage</label>
                <input asp-for="MedicineDosage" class="form-control" />
                <span asp-validation-for="MedicineDosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineMdate" class="control-label">Manufacturing Date</label>
                <input asp-for="MedicineMdate" class="form-control" />
                <span asp-validation-for="MedicineMdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineEdate" class="control-label">Expiry Date</label>
                <input asp-for="MedicineEdate" class="form-control" />
                <span asp-validation-for="MedicineEdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineStock" class="control-label">Stock</label>
                <input asp-for="MedicineStock" class="form-control" />
                <span asp-validation-for="MedicineStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicinePrice" class="control-label">Price</label>
                <input asp-for="MedicinePrice" class="form-control" />
                <span asp-validation-for="MedicinePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


