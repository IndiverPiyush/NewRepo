@model MedicineSearchWebApp.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Wallet Updation</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
           
            <div class="form-group">
                <label asp-for="UserWalletbal" class="control-label"></label>
                <input asp-for="UserWalletbal" class="form-control" />
                <span asp-validation-for="UserWalletbal" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Update Wallet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



